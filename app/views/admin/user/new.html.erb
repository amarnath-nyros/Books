<h1>Register User <font color="#FF0000" ><%#= "  "+@errs.to_s+"  Errors" %><%#= @atrs %></font></h1>
<div style="background-color: #CCFFFF; height:500px; width:500px;" >
  <% form_for (:user,  :url => {:action => "create"},  :html => {:multipart => true}) do  %>
  <%# form_tag ({:action => 'create'}, :multipart => true) do %>
  <table height="452" >
    <tr>
      <td width="114">&nbsp;User Name</td>
      <td width="23">&nbsp;</td>
      <td width="104">&nbsp;</td>
      <td width="104"><%= text_field :user,:name,:size=>15 %> <%= error_message_on :user, :name %></td>
      <td id="fonts" width="59">
    </tr>
    <tr>
      <td>&nbsp;Password</td>
      <td>&nbsp;</td>
