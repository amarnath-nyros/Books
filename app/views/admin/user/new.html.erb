      <td height="91">UpLoad Your  Photo </td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td><%= file_field :user,:photo%>&nbsp; <%= (error_message_on :user, :photo)%></td>
    </tr>
    <tr>
      <td height="60"><p><strong>PROFILES</strong></p>
      </td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>:&nbsp;</td>
    </tr>
    <tr>
      <td>&nbsp;First Name</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td><%= text_field :profile,:fname,:size=>15 %> <%= (error_message_on :profile, :fname)%></td>
      <td id="fonts">&nbsp;</td>
    </tr>
    <tr>
      <td>&nbsp;Last Name</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td><%= text_field :profile,:lname,:size=>15 %> <%= (error_message_on :profile, :lname)%></td>
      <td id="fonts">&nbsp;</td>
    </tr>
    <tr>
      <td>&nbsp;Email</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td><%= text_field :profile,:email,:size=>15 %> <%= (error_message_on :profile, :email)%></td>
      <td id="fonts">&nbsp;</td>
    </tr>
    <tr>
      <td>&nbsp;Address</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td><%= text_area :profile,:address,:cols => 10, :rows => 4 %> <%= (error_message_on :profile, :address)%></td>
      <td id="fonts">&nbsp;</td>
    </tr>
    <tr>
      <td height="59">&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <td  align="center"><%= submit_tag "Create" %> </td>
    </tr>
  </table>
  <% end %>
