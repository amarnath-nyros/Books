      <td><%=  password_field(:user, :conpass, :size => 15) %> <%= error_message_on :user, :conpass %></td>
    </tr>
    <tr>
      <td>Email</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>  <%= text_field :user,:email,:size=>15 %> <%= error_message_on :user, :email %>&nbsp;</td>
    </tr>
